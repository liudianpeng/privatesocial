<?php
namespace Knework\Bundle\CommonBundle\Entity;

use FOS\UserBundle\Model\User as BaseUser;
use Doctrine\ORM\Mapping as ORM;
use Symfony\Component\HttpFoundation\File\File;
use Symfony\Component\HttpFoundation\File\UploadedFile;
use Symfony\Component\Validator\Constraints as Assert;
use Vich\UploaderBundle\Mapping\Annotation as Vich;
use Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity;
/**
 * @Vich\Uploadable
 * @ORM\Table(name="knework_member")
 * @ORM\Entity(repositoryClass="Knework\Bundle\CommonBundle\Entity\MemberRepository")
 * @UniqueEntity(
 *     fields={"username", "email"},
 *     message="用户名和电子信箱不能重复"
 * )
 */
class Member  extends BaseUser
{
    const ROLE_USER     = 'ROLE_USER';
    const ROLE_TALENT   = 'ROLE_TALENT';
    const ROLE_COMPANY  = 'ROLE_COMPANY';
    const ROLE_AGENT    = 'ROLE_AGENT';
    const ROLE_ADMIN    = 'ROLE_ADMIN';
    /**
     * @var integer
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    protected $id;


    public function __construct()
    {
        parent::__construct();
        $this->addRole(self::ROLE_USER);
        $this->created = new \DateTime();
        $this->modified = $this->created;
        $this->enabled = true;
        $this->status = true;
        $this->remark = "";
        $this->uid = uniqid(md5(rand()),true);
    }

    /**
     * @ORM\Column(type="string",length=255,name="uid",nullable=false)
     */
    protected $uid;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="created", type="datetimetz")
     */
    protected $created;

    /**
     *
     *
     * @ORM\Column(name="modified", type="datetimetz")
     */
    protected $modified;

    /**
     * @ORM\Column(name="status", type="boolean")
     */
    protected $status;

    /**
     * @ORM\Column(name="remark", type="text",nullable=true)
     */
    protected $remark;

    /**
     * @ORM\ManyToOne(targetEntity="City")
     * @ORM\JoinColumn(name="city_id", referencedColumnName="id",nullable=true)
     */
    protected $city;

    /**
     *
     * @ORM\Column(name="realname",type="string",length=255,nullable=true)
     */
    protected $realname;

    /**
     * @Assert\NotBlank(message="用户名不可为空")
     * @Assert\Length(
     *     min="4",
     *     max="36",
     *     minMessage="用户名不能少于4个字符",
     *     maxMessage="用户名不能多于36个字符"
     * )
     * @Assert\Regex(
     *    pattern="/^[A-z0-9]*$/i",
     *    message="用户名只能使用英文字母和数字"
     * )
     */
    protected $username;

    /**
     *
     * @Assert\Length(
     *     min="6",
     *     minMessage="密码不能低于6个字符"
     * )
     *
     */
    protected $password;

    /**
     * @Assert\Email(
     *    checkMX=true,
     *    message="请使用合法的电子信箱"
     * )
     */
    protected $email;


    /**
     *
     * @ORM\Column(name="avatar",type="string",length=255,nullable=true)
     */
    protected $avatar;

    /**
     *
     * @ORM\Column(name="avatar_x",type="string",length=255,nullable=true)
     */
    protected $avatarX;
    /**
     *
     * @ORM\Column(name="avatar_y",type="string",length=255,nullable=true)
     */
    protected $avatarY;
    /**
     *
     * @ORM\Column(name="avatar_w",type="string",length=255,nullable=true)
     */
    protected $avatarW;
    /**
     *
     * @ORM\Column(name="avatar_h",type="string",length=255,nullable=true)
     */
    protected $avatarH;

    /**
     * @ORM\Column(name="origin_avatar",type="string",length=255,nullable=true)
     */
    protected $originAvatar;

    /**
     * @Assert\File(
     *     maxSize="10M",
     *     mimeTypes={"image/png","image/jpeg","image/pjpeg",
     *                          "image/jpg","image/gif"}
     * )
     * @Vich\UploadableField(mapping="avatar", fileNameProperty="avatar")
     *
     * @var File $image
     */
    private $avatarAttach;

    public function setAvatarAttach($avatarAttach)
    {
        $this->avatarAttach = $avatarAttach;
        if($avatarAttach){
            $this->avatar = $avatarAttach->getFileName();
        }
        return $this;
    }

    public function getAvatarAttach()
    {
        return $this->avatarAttach;
    }
    /**
     * @Assert\File(
     *     maxSize="30M",
     *     mimeTypes={"image/png","image/jpeg","image/pjpeg",
     *                          "image/jpg","image/gif"}
     * )
     * @Vich\UploadableField(mapping="avatar", fileNameProperty="originAvatar")
     *
     * @var File $image
     */
    private $originAvatarAttach;

    public function setOriginAvatarAttach($originAvatarAttach)
    {
        $this->originAvatarAttach = $originAvatarAttach;
        if($originAvatarAttach){
            $this->originAvatar = $originAvatarAttach->getFileName();
        }
        return $this;
    }

    public function getOriginAvatarAttach()
    {
        return $this->originAvatarAttach;
    }


    public function __toString()
    {
        return $this->getRealname()?$this->getRealname():$this->getUsername();
    }


    /**
     * Get id
     *
     * @return integer
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set uid
     *
     * @param string $uid
     * @return Member
     */
    public function setUid($uid)
    {
        $this->uid = $uid;

        return $this;
    }

    /**
     * Get uid
     *
     * @return string
     */
    public function getUid()
    {
        return $this->uid;
    }

    /**
     * Set created
     *
     * @param \DateTime $created
     * @return Member
     */
    public function setCreated($created)
    {
        $this->created = $created;

        return $this;
    }

    /**
     * Get created
     *
     * @return \DateTime
     */
    public function getCreated()
    {
        return $this->created;
    }

    /**
     * Set modified
     *
     * @param \DateTime $modified
     * @return Member
     */
    public function setModified($modified)
    {
        $this->modified = $modified;

        return $this;
    }

    /**
     * Get modified
     *
     * @return \DateTime
     */
    public function getModified()
    {
        return $this->modified;
    }

    /**
     * Set status
     *
     * @param boolean $status
     * @return Member
     */
    public function setStatus($status)
    {
        $this->status = $status;

        return $this;
    }

    /**
     * Get status
     *
     * @return boolean
     */
    public function getStatus()
    {
        return $this->status;
    }

    /**
     * Set enabled
     *
     * @param boolean $enabled
     * @return Member
     */
    public function setEnabled($enabled)
    {
        $this->enabled = $enabled;

        return $this;
    }

    /**
     * Get enabled
     *
     * @return boolean
     */
    public function getEnabled()
    {
        return $this->enabled;
    }

    /**
     * Set remark
     *
     * @param string $remark
     * @return Member
     */
    public function setRemark($remark)
    {
        $this->remark = $remark;

        return $this;
    }

    /**
     * Get remark
     *
     * @return string
     */
    public function getRemark()
    {
        return $this->remark;
    }

    /**
     * Set city
     *
     * @param \Knework\Bundle\CommonBundle\Entity\City $city
     * @return Member
     */
    public function setCity(\Knework\Bundle\CommonBundle\Entity\City $city = null)
    {
        $this->city = $city;

        return $this;
    }

    /**
     * Get city
     *
     * @return \Knework\Bundle\CommonBundle\Entity\City
     */
    public function getCity()
    {
        return $this->city;
    }

    /**
     * Set realname
     *
     * @param string $realname
     * @return Member
     */
    public function setRealname($realname)
    {
        $this->realname = $realname;

        return $this;
    }

    /**
     * Get realname
     *
     * @return string
     */
    public function getRealname()
    {
        return $this->realname?$this->realname:$this->username;
    }

    /**
     * Set avatar
     *
     * @param string $avatar
     * @return Member
     */
    public function setAvatar($avatar)
    {
        $this->avatar = $avatar;

        return $this;
    }

    /**
     * Get avatar
     *
     * @return string
     */
    public function getAvatar()
    {
        return $this->avatar;
    }

    /**
     * Set originAvatar
     *
     * @param string $originAvatar
     * @return Member
     */
    public function setOriginAvatar($originAvatar)
    {
        $this->originAvatar = $originAvatar;

        return $this;
    }

    /**
     * Get originAvatar
     *
     * @return string
     */
    public function getOriginAvatar()
    {
        return $this->originAvatar;
    }
}