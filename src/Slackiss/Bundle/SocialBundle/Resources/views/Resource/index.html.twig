{% extends "SlackissSocialBundle:layout:layout.html.twig" %}

{% block title %}资源列表{% endblock %}

{% block content %}

{% for entity in entities %}
<a href="{{path('social_resource_show',{id:entity.id})}}">
  <img src="{{vich_uploader_asset(entity,"faceAttach")|imagine_filter('face_image')}}" class="thumbnail img-responsive" />
</a>
{% endfor %}
{{ knp_pagination_render(entities) }}
{% endblock %}
