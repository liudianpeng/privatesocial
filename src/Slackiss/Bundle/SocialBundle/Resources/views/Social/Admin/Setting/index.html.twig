{% extends "SlackissSocialBundle:layout:layout.html.twig" %}

{% block title %}站点设置{% endblock %}

{% block content %}

<div class="form">
<form method="POST" action="{{path('social_admin_setting_update')}}">
  <div class="form-group">
    <label for="announcement">站内公告</label>
    <textarea name="announcement" rows=8 class="form-control">{{announcement}}</textarea>
  </div>
  <div class="form-group">
    <label for="footer">页脚</label>
    <textarea name="footer" rows=2 class="form-control">{{footer}}</textarea>
  </div>
  <div class="form-group">
    <input type="submit" name="submit" value="保存" class="btn btn-default" />
  </div>
</div>

{% endblock %}
